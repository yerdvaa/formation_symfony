{% extends "layout.html.twig" %}

{% block ariane %}
    <li class="active">Création de produits</li>
{% endblock %}

{% block content %}

    <strong>

        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-info">
                {{ flash_message }}
            </div>
        {% endfor %}
    </strong>

    <div class="box box-info">
        <div class="box-body">
        {{ form_start(formProduct) }}

            <div>
                {{ form_errors(formProduct.title) }}
                {{ form_label(formProduct.title,  "Nom du produit", {label_attr: {class: "prod"} } ) }}
                {{ form_widget(formProduct.title, {attr: { class: "form-control"} } ) }}
            </div>

            <div>
                {{ form_errors(formProduct.description) }}
                {{ form_label(formProduct.description, "description",{label_attr: {class: "le-nom-de-votre-class"} }) }}<br>
                {{ form_widget(formProduct.description, {attr: {placeholder: "Description du produit", class: "form-control"} }) }}
            </div>

            <div>
                {{ form_errors(formProduct.price) }}
                {{ form_label(formProduct.price,  "Prix", {label_attr: {class: "prod"} } ) }}
                {{ form_widget(formProduct.price, {attr: { class: "form-control"} } ) }}
            </div>

            <div>
                {{ form_errors(formProduct.quantity) }}
                {{ form_label(formProduct.quantity,  "Quantité", {label_attr: {class: "prod"} } ) }}
                {{ form_widget(formProduct.quantity, {attr: { class: "form-control"} } ) }}
            </div>

            <div class="box-footer">
                <button class="btn btn-info">Envoyer</button>
            </div>

            {{ form_end(formProduct) }}

        </div>
    </div>

{% endblock content %}