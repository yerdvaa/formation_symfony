        <div class="col-md-6">
            <div class="thumbnail">

        {% if product is defined %}
            {% for search in product %}

            <img class="img-responsive" style="width: 80px" src="{{ asset("upload/" ~ search.image) }}" alt="">
            <div class="caption-full">
                <h4 class="pull-right">{{ search.price }} â‚¬</h4>
                <h4><a href="#">{{ search.titleFR }}</a>
                </h4>
                <p><strong>{{ search.marque.title }}</strong></p>

                <p>{{ search.descriptionFR }}</p>
            </div>
            {% endfor %}
        {% endif %}
            </div>
        </div>
        </div>
    {% endblock %}