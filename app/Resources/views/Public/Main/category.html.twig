{% extends "public.layout.html.twig" %}

    {% block stylesheets %}
        {{ parent() }}
        <!-- Custom CSS -->
        <link href="{{ asset("public/css/heroic-features.css") }}" rel="stylesheet">
    {% endblock %}

    {% block content %}


        <div class="col-lg-8">
            <!-- Jumbotron Header -->
            <header class="jumbotron hero-spacer">

                    <h1>{{ categorie.title }}</h1>
                    <p>{{ categorie.description }}</p>
                    <p><a class="btn btn-primary btn-large">Call to action!</a>
                    </p>

            </header>
        </div>
            <hr>

            <!-- Title -->
            <div class="row">
                <div class="col-lg-12">
                    <h3>Les produits</h3>
                </div>
            </div>
            <!-- /.row -->

        <ul class="pagination">
            {% for i in 1..3 %}
            <li class={% if pageactive == i %} "active "{% endif %}><a href="{{ path("showCategory", {id:categorie.id}) }} ?page={{ i }}">{{ i }}</a></li>
            {% endfor %}
        </ul>
            <!-- Page Features -->
        <div class="row text-center">
                {% for product in products %}
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div class="thumbnail">
                        <img src="{{ asset("upload/" ~ product.image) }}" alt="">
                        <div class="caption">
                            <h3><a href="{{ path("showProduct",{id:product.id}) }}">{{ product.titleFR }}</a></h3>
                            <p>{{ product.descriptionFR }}</p>
                            <p>Prix: {{ product.price }}â‚¬</p>
                            <p>
                                <a href="#" class="btn btn-primary">Buy Now!</a> <a href="#" class="btn btn-default">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
            <!-- /.row -->

    {% endblock %}